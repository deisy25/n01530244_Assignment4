            return false;
        } else {
            errorbox.style.display = 'none';
            errorbox.innerHTML = "";
        }

        //check if teahcerLName is ""
        if (teacherlname.value === "") {
            errorbox.style.display = 'block';
            errorbox.innerHTML += "Teacher Last Name must be filled<br>";
            return false;
        } else {
            errorbox.style.display = 'none';
            errorbox.innerHTML = "";
        }

        //check if teahcerNumber is ""
        if (teacherNumber.value === "") {
            errorbox.style.display = 'block';
            errorbox.innerHTML += "Teacher Number must be filled<br>";
            return false;
        } else {
            errorbox.style.display = 'none';
            errorbox.innerHTML = "";
        }

        //check if salary is ""
        if (salary.value === "") {
            errorbox.style.display = 'block';
